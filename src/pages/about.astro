---
import HeroSection from "../components/HeroSection.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import RealitySection from "../components/RealitySection.astro";
import CorevaluesSection from "../components/CorevaluesSection.astro";
import Newsletter from "../components/Newsletter.astro";
import ChampionSection from "../components/ChampionSection.astro";
import Qna from "../components/Qna.astro";
import Counter from "../components/Counter.astro";
const data_url = "https://raw.githubusercontent.com/sagecave/frontend-design/main/resources/json/employees.json";
const employeeData = await fetch(data_url).then((res) => res.json());
const treeEmployee = employeeData.slice(0, 3);
---

<BaseLayout title="About">
  <HeroSection />

  <RealitySection
    class="flow"
    headerContent="Turn your ideas into reality."
    pContent="Capitalize on low hanging fruit to identify a ballpark value added activity beta test. Override the digital divide with additional from DevOps."
    liContentFirst="Bring to the table win-win survival strategies to ensure proactive domination. At the end of the day."
    liContentSecond="Capitalize on low hanging fruit to identify a ballpark value added activity to beta test override the digital."
  />
  <Counter />
  <CorevaluesSection themeSec="lightMode" colorBut="black" />
  <ChampionSection data={treeEmployee} />
  <Qna />
  <Newsletter />
</BaseLayout>
