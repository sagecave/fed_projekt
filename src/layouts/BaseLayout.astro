---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FrontpageHero from "../components/FrontpageHero.astro";
import HeroCard from "../components/HeroCard.astro";
import ExpectSection from "../components/ExpectSection.astro";

const { title = "" } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header>
      <Header />
    </header>
    <main>
      <FrontpageHero />
      <ExpectSection
        headerContent="What To Expect"
        pContent="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat."
        liContentFirst="Bring to the table win-win survival strategies to ensure proactive domination. At the end of the day."
        liContentSecond="Capitalize on low hanging fruit to identify a ballpark value added activity to beta test override the digital."
      />

      <slot />
    </main>
    <footer>
      <Footer />
    </footer>
  </body>
</html>

<style>
  @layer components {
    header {
      background-color: rgba(27, 27, 27, 0.91);
    }
    footer {
      background-color: var(--primary_black);
    }
    body {
      display: grid;
      grid-template-columns: [full-start]1fr [content-start]minmax(0, 500px) minmax(0, 500px) [content-end] 1fr[full-end];

      & * {
        display: grid;
        grid-column: full;
        grid-template-columns: subgrid;

        > * {
          grid-column: full;
          grid-template-columns: subgrid;
          display: grid;
        }
      }
    }
  }
</style>
