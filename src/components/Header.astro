---
import Buttons from "./Buttons.astro";
import InputKnap from "./InputKnap.astro";
---

<div class="navbar">
  <h1>AskExperts</h1>
  <ul>
    <li><a href="#">Home</a></li>
    <li><a href="#">Case Study</a></li>
    <li><a href="#">Team</a></li>
    <li><a href="#">About</a></li>
  </ul>
  <Buttons theme="yellow" label="login" popuoKnap="popup" />

  <div popover id="popup">
    <h2>Dashboard Login</h2>
    <div class="popupContent">
      <InputKnap inputText="Enter Email" />
      <InputKnap inputText="Enter Password" />
      <Buttons theme="yellow" label="Go to dashboard" />
    </div>
  </div>
</div>

<style>
  @layer components {
    #popup {
      display: flex;
      flex-direction: column;
      gap: 2.88rem;
      background-color: var(--primary_black);
      padding: 2.5rem 3.75rem 3.75rem 3.75rem;
      border-radius: 1.875rem;
      width: 40rem;
      z-index: -3;

      h2 {
        color: var(--primary_white);
        text-align: center;
      }

      .popupContent {
        display: flex;
        flex-direction: column;
        gap: 1.88rem;
      }
      &::backdrop {
        background-color: #0004;
        backdrop-filter: blur(4px);
      }
    }
    .navbar {
      padding: 2.38rem 0rem;
      grid-column: content;

      display: flex;
      justify-content: space-between;

      h1 {
        color: var(--primary_white);
      }

      ul {
        display: flex;

        list-style-type: none;
        gap: 1.875rem;
        padding-right: 15%;

        & li {
          list-style-type: none;

          & a {
            text-decoration: none;
            color: var(--primary_white);
          }
        }
      }
    }
  }
</style>
