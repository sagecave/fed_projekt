---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

const { employee } = Astro.props;
const { img, name } = employee;

const images = import.meta.glob<{ default: ImageMetadata }>("/src/assets/images/*.{jpeg,jpg,png,gif}");
if (!images[img]) throw new Error(`"${img}" does not exist in glob: "src/assets/images/*.{jpeg,jpg,png,gif}"`);

const data_url = "https://raw.githubusercontent.com/sagecave/frontend-design/main/resources/json/employees.json";
const employeeData = await fetch(data_url).then((res) => res.json());
---

<article>
  <Image src={images[img]()} alt={name} width={100} />
</article>

