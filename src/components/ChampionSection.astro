---
import EmployeeCard from "./EmployeeCard.astro";
import EmployeeSection from "./EmployeeSection.astro";
import SmallBox from "./SmallBox.astro";
const { data } = Astro.props;
---

<section>
  <div class="gridContainer">
    <div>
      <SmallBox boxContentP="Our team" />
      <h2>We champion the bold to achieve the extraordinary</h2>
      <p>Ippsum is the result of synergy between our teams and our customers. Our company culture is focused on excellent productivity, customer satisfaction, respect for team.</p>
      <div>
        <EmployeeSection data={data} />
      </div>
    </div>
  </div>
</section>

<style>
  @layer components {
    section {
      padding: 3rem 0rem;
      background-color: var(--primary_white);
    }
    .gridContainer {
      grid-column: 2/4;
    }

    h2,
    p {
      max-width: 50%;
    }
  }
</style>
