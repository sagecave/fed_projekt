---
const { theme = "black", label = "login" } = Astro.props;
---

<button data-button={theme}>{label}</button>

<style>
  @layer components {
    button {
      background-color: var(--primary_white);
      border-radius: 2.625rem;
      padding: 0.9375rem 2.125rem;
    }
    [data-button="login"] {
      background-color: var(--primary_yellow);
      border-radius: 1.25rem;
      padding: 0.5rem 0.5rem;
      &:hover {
        --colorChange: 12% #fff;
      }

      &:active {
        --colorChange: 20% #000;
      }
    }

    [data-button="black"] {
      background-color: var(--primary_black);
      color: var(--primary_white);
      &:hover {
        --colorChange: 12% #fff;
      }

      &:active {
        --colorChange: 20% #000;
      }
    }
    [data-button="white"] {
      background-color: var(--primary_white);
      color: var(--primary_black);

      &:hover {
        --colorChange: 12% #fff;
      }

      &:active {
        --colorChange: 20% #000;
      }
    }
    [data-button="yellow"] {
      background-color: var(--primary_yellow);
      color: var(--primary_black);

      &:hover {
        --colorChange: 12% #fff;
      }

      &:active {
        --colorChange: 20% #000;
      }
    }
    [data-button="subscribe"] {
      background-color: var(--primary_yellow);
      color: var(--primary_black);
      padding: 0.9375rem 2.8125rem;

      &:hover {
        --colorChange: 12% #fff;
      }

      &:active {
        --colorChange: 20% #000;
      }
    }
  }
</style>
