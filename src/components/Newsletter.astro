---
import Buttons from "./Buttons.astro";
---

<section>
  <div class="newsletterContainer">
    <div class="newsletterContent">
      <h2>Subscribe Our Newsletter</h2>
      <p>Build stronger Customer Relationships with Consultalk</p>
    </div>
    <div class="newsletterContact">
      <input type="text" placeholder="your mail address" />
      <Buttons theme="subscribe" label="Subscribe" />
    </div>
  </div>
</section>

<style>
  @layer components {
    section {
      padding: 2rem 0rem 6rem;
    }
    .newsletterContainer {
      display: flex;

      justify-content: space-between;
      grid-column: 2/4;
      background-color: var(--primary_black);
      border-radius: 2rem;
      padding: 5.44rem;
      .newsletterContent {
        display: flex;
        flex-direction: column;

        h2,
        p {
          color: var(--primary_white);
        }
      }
    }
    .newsletterContact {
      display: flex;
      flex-direction: row;
      flex-wrap: wrap;
      gap: 1rem;
      input {
        background-color: var(--primary_white);
        border-radius: 3rem;
        padding: 1.375rem 9.6875rem 1.375rem 2.0625rem;
      }
    }
  }
</style>
