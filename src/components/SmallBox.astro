---
const { boxContentP = "lol", colorOfBox = "yellow" } = Astro.props;
---

<div data-smallBox={colorOfBox} class="boxContent">
  <p>
    {boxContentP}
  </p>
</div>

<style>
  @layer components {
    .boxContent {
      background-color: var(--primary_yellow);
      width: fit-content;
      border-radius: 1.25rem;
      padding: 0rem 0.75rem;
    }

    [data-smallBox="white"] {
      background-color: var(--primary_white);
    }
  }
</style>
