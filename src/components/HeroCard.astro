    justify-content: space-between;
    align-items: center;

    div {
      padding: 2.875rem;
      border: 1px solid rgba(255, 255, 255, 0.2);
      background: rgba(38, 38, 38, 0.9);
      border-radius: 1.25rem;
      backdrop-filter: blur(16px);
      width: 24rem;
      height: 19rem;
    }
  }

  h2,
  p {
    color: var(--primary_white);
    text-wrap: pretty;
